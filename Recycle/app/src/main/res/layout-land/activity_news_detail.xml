<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsDetailActivity">


    <ScrollView
        android:layout_width="740dp"
        android:layout_height="400dp"
        android:background="#FCFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/group"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.024"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/groupName"
                android:layout_width="193dp"
                android:layout_height="35dp"
                android:layout_marginTop="70dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/group"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="202dp"
                android:layout_height="31dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/group"
                app:layout_constraintTop_toBottomOf="@+id/groupName" />

            <ImageView
                android:id="@+id/just"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:layout_marginStart="424dp"
                android:layout_marginLeft="424dp"
                android:src="@drawable/just"
                app:layout_constraintStart_toEndOf="@+id/groupName"
                app:layout_constraintTop_toTopOf="@+id/groupName" />

            <TextView
                android:id="@+id/theme"
                android:layout_width="731dp"
                android:layout_height="66dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@+id/group"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="700dp"
                android:layout_height="297dp"
                app:layout_constraintEnd_toEndOf="@+id/theme"
                app:layout_constraintStart_toStartOf="@+id/theme"
                app:layout_constraintTop_toBottomOf="@+id/theme"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/likes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/like"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mainImage"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="66dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="29dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likes"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <ImageView
                android:id="@+id/comments"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/ppp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likeCount"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <TextView
                android:id="@+id/commentsCount"
                android:layout_width="66dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="26dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/comments"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/share"
                app:layout_constraintStart_toEndOf="@+id/commentsCount"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <TextView
                android:id="@+id/shareCount"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="26dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/share"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <ImageView
                android:id="@+id/views"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="300dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/views"
                app:layout_constraintStart_toEndOf="@+id/shareCount"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/views"
                app:layout_constraintTop_toBottomOf="@+id/mainImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>